@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<style>
    .form-container {
        display: flex;
        align-items: stretch; /* Estira los elementos secundarios para tener la misma altura */
        justify-content: space-between;
    }

    .login-form {
        flex: 1;
        padding-right: 20px;
    }

    .image-container {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .image-container img {
            width: 100%; /* Ocupa todo el ancho disponible */
            height: 100%; /* Ocupa toda la altura del contenedor */
            object-fit: cover; /* Ajusta la imagen para que se recorte adecuadamente si es necesario */
            border-radius: 8px; /* Redondear esquinas, opcional */
        }

    .full-height {
        height: 100%;
    }
</style>

<h1>@ViewData["Title"]</h1>

<div class="form-container">
    <!-- Formulario de inicio de sesión -->
    <div class="login-form">
        <section>
            <form id="account" method="post">
                <h2>Bienvenido(a) a Gestión del Presupuesto De Campos Clinicos</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar Sesión</button>
                </div>
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Olvidaste tu contraseña?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarte como nuevo Usuario</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Confirmación Reenvio email </a>
                    </p>
                </div>
            </form>
        </section>
    </div>

    <!-- Imagen al lado derecho -->
    <div class="image-container">
        <img src="/Images/CamposClinicosInicio.jpg" alt="Imagen de bienvenida">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

