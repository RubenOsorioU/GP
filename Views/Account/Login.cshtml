@model Gestion_Del_Presupuesto.Models.LoginViewModel

@{
    Layout = null; // No usar layout para la página de inicio de sesión
    ViewData["Title"] = "Iniciar Sesión";
    var successMessage = TempData["Message"] as string;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <div class="login-container">
        <div class="login-box mx-auto">
            <div class="text-center mb-4">
                <img src="~/images/ucn_logo.png" alt="User Icon" class="user-icon mb-3" style="width: 80px; height: 80px;" />
                <h2>Iniciar Sesión</h2>
            </div>

            @* Mostrar mensaje de éxito si TempData["Message"] tiene contenido *@
            @if (!string.IsNullOrEmpty(successMessage))
            {
                <div class="alert alert-success alert-dismissible fade show text-center" role="alert">
                    @successMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @* Mostrar error de ViewBag si existe *@
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.Error
                </div>
            }

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="Username" class="form-label">Nombre Institucional</label>
                    <input class="form-control" asp-for="Email" id="email" placeholder="usuario@ucen.cl" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <input class="form-control" asp-for="Password" id="password" type="password" placeholder="Ingrese su contraseña" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>             
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js">
    </script>
</body>
</html>
