@model Gestion_Del_Presupuesto.Models.Campo_Clinico

@{
    ViewData["Title"] = "Editar Campo Clínico";
}

<h2>Editar Campo Clínico</h2>

<form asp-action="Edit">
    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tipo" class="control-label"></label>
        <input asp-for="Tipo" class="form-control" />
        <span asp-validation-for="Tipo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Sede" class="control-label"></label>
        <select asp-for="Sede" class="form-control">
            <option value="">Seleccione una sede</option>
            @foreach (var sede in ViewBag.Sedes as List<string>)
            {
                <option value="@sede" selected="@(Model.Sede == sede ? "selected" : "")">@sede</option>
            }
        </select>
        <span asp-validation-for="Sede" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
