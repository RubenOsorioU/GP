@model Gestion_Del_Presupuesto.Models.ConveniosModel

@{
    ViewData["Title"] = "Crear Nuevo Convenio";
    var Categoria = ViewBag.Categoria as Dictionary<string, List<string>>;
}

<h2>Crear Nuevo Convenio</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Categoria">Categoria</label>
        <select class="form-control" asp-for="Categoria" id="Categoria" onchange="actualizarInstituciones()">
            <option value="">Seleccione un tipo</option>
            @if (Categoria != null)
            {
                @foreach (var tipo in Categoria.Keys)
                {
                    <option value="@tipo">@tipo</option>
                }
            }
        </select>
    </div>

    <div class="form-group">
        <label asp-for="ContratosInstituciones">Contratos Instituciones</label>
        <select class="form-control" asp-for="ContratosInstituciones" id="ContratosInstituciones">
            <option value="">Seleccione una institución</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="NumeroEstudiantes">Nº Estudiantes</label>
        <input type="number" class="form-control" asp-for="NumeroEstudiantes" />
    </div>

    <div id="retribuciones" class="form-group">
        <label>Selecciona las categorías de retribuciones:</label><br />
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="PagoUsoCCSelected" />
            <label class="form-check-label" asp-for="PagoUsoCC">Pago por Uso de CC $$</label>
            <input type="number" class="form-control" asp-for="PagoUsoCC" step="0.01" />
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="PagoApoyoDocenciaSelected" />
            <label class="form-check-label" asp-for="PagoApoyoDocencia">Pago Apoyo a la Docencia</label>
            <input type="number" class="form-control" asp-for="PagoApoyoDocencia" step="0.01" />
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="PagoRRHHSelected" />
            <label class="form-check-label" asp-for="PagoRRHH">Pago en RRHH</label>
            <input type="number" class="form-control" asp-for="PagoRRHH" step="0.01" />
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="CapacitacionSelected" />
            <label class="form-check-label" asp-for="Capacitacion">Capacitación</label>
            <input type="number" class="form-control" asp-for="Capacitacion" step="0.01" />
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="ObrasMenoresSelected" />
            <label class="form-check-label" asp-for="ObrasMenores">Obras Menores</label>
            <input type="number" class="form-control" asp-for="ObrasMenores" step="0.01" />
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="ObrasMayoresSelected" />
            <label class="form-check-label" asp-for="ObrasMayores">Obras Mayores</label>
            <input type="number" class="form-control" asp-for="ObrasMayores" step="0.01" />
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" asp-for="OtrosGastosRetribucionSelected" />
            <label class="form-check-label" asp-for="OtrosGastosRetribucion">Otros Gastos x retribución</label>
            <input type="number" class="form-control" asp-for="OtrosGastosRetribucion" step="0.01" />
        </div>
    </div>

    <button type="submit" class="btn btn-success">Guardar Nuevo Convenio</button>
</form>

<script>
    function actualizarInstituciones() {
        var tipoSeleccionado = document.getElementById("TipoInstitucion").value;
        var categoria = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Categoria));
        var selectInstitucion = document.getElementById("ContratosInstituciones");
        selectInstitucion.innerHTML = "<option value=''>Seleccione una institución</option>";

        if (categoria[tipoSeleccionado]) {
            categoria[tipoSeleccionado].forEach(function (institucion) {
                var option = document.createElement("option");
                option.value = institucion;
                option.text = institucion;
                selectInstitucion.appendChild(option);
            });
        }
    }
</script>
