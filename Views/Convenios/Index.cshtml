@model List<Gestion_Del_Presupuesto.Models.ConveniosModel>

@{
    ViewData["Title"] = "Listado de Convenios Generales";
    var conveniosAgrupados = Model.GroupBy(c => c.Categoria); // Agrupamos por la categoría
}

<h2 class="mb-4">Listado de Convenios Generales</h2>

<!-- Filtros -->
<form method="get" asp-action="Index">
    <div class="form-row">
        <div class="col-md-4">
            <label for="Carrera">Filtrar por Carrera</label>
            <select class="form-control" id="Carrera" name="carrera">
                <option value="">Seleccione una carrera</option>
                <option value="Enfermería">Enfermería</option>
                <option value="Tecnología Medica">Tecnología Medica</option>
                <option value="Nutrición y Dietética">Nutrición y Dietética</option>
                <option value="Psicología">Psicología</option>
                <option value="Terapia Ocupacional">Terapia Ocupacional</option>
                <option value="Kinesiología">Kinesiología</option>
                <option value="Medicina">Medicina</option>
            </select>
        </div>

        <div class="col-md-4">
            <label for="Convenio">Filtrar por Convenio</label>
            <input type="text" class="form-control" id="Convenio" name="convenio" value="@ViewData["Convenio"]" placeholder="Ingrese nombre del convenio">
        </div>

        <div class="col-md-4">
            <label for="TipoRetribucion">Filtrar por Tipo de Retribución</label>
            <select class="form-control" id="TipoRetribucion" name="tipoRetribucion">
                <option value="">Seleccione tipo</option>
                <option value="Pago por Uso de CC $$">Pago por Uso de CC $$</option>
                <option value="Pago Apoyo a la Docencia">Pago Apoyo a la Docencia</option>
                <option value="Pago en RRHH">Pago en RRHH</option>
                <option value="Capacitación">Capacitación</option>
                <option value="Obras Menores">Obras Menores</option>
                <option value="Obras Mayores">Obras Mayores</option>
                <option value="Otros Gastos x retribución">Otros Gastos x retribución</option>
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Aplicar Filtro</button>
</form>

@foreach (var grupo in conveniosAgrupados)
{
    <h3>@grupo.Key</h3> <!-- Aquí se mostrará la categoría (Hospitales_Clinicas, Atencion_primaria, etc.) -->

    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>ID Convenio</th>
                <th>Contratos Instituciones</th>
                <th>Nº Estudiantes</th>
                <th>Pago por Uso de CC $$</th>
                <th>Pago Apoyo a la Docencia</th>
                <th>Pago en RRHH</th>
                <th>Capacitación</th>
                <th>Obras Menores</th>
                <th>Obras Mayores</th>
                <th>Otros Gastos x retribución</th>
                <th>Total Gasto estimado 2025</th>
                <th>Deuda 2020-2023</th>
                <th>Deuda 2024</th>
                <th>Total Deuda</th>
                <th>Facturado 2025 corresp 2020-2023</th>
                <th>Facturado 2025 corresp 2024</th>
                <th>Facturado 2025 corresp 2025</th>
                <th>Total Facturado y Pagado</th>
                <th>Saldo Estimado x pagar 2025</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in grupo)
            {
                <tr>
                    <td>@item.Id_Convenios</td>
                    <td>@item.ContratosInstituciones</td>
                    <td>@item.NumeroEstudiantes</td>
                    <td>@item.PagoUsoCC?.ToString("C")</td>
                    <td>@item.PagoApoyoDocencia?.ToString("C")</td>
                    <td>@item.PagoRRHH?.ToString("C")</td>
                    <td>@item.Capacitacion?.ToString("C")</td>
                    <td>@item.ObrasMenores?.ToString("C")</td>
                    <td>@item.ObrasMayores?.ToString("C")</td>
                    <td>@item.OtrosGastosRetribucion?.ToString("C")</td>
                    <td>@item.TotalGastoEstimado?.ToString("C")</td>
                    <td>@item.DeudaAnteriores?.ToString("C")</td>
                    <td>@item.Deuda2024?.ToString("C")</td>
                    <td>@item.TotalDeuda?.ToString("C")</td>
                    <td>@item.FacturadoAnteriores?.ToString("C")</td>
                    <td>@item.Facturado2024?.ToString("C")</td>
                    <td>@item.Facturado2025?.ToString("C")</td>
                    <td>@item.TotalFacturado?.ToString("C")</td>
                    <td>@item.SaldoEstimadoPagar?.ToString("C")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id_Convenios" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id_Convenios" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<a asp-action="Create" class="btn btn-success">Agregar Nuevo Convenio</a>
