@model Gestion_Del_Presupuesto.Models.UFViewModel

@{
    ViewData["Title"] = "Ingreso y Conversión de UF";
}

<h2>Ingreso y Conversión de UF</h2>

<form asp-action="ConvertirUF">
    <div class="form-group">
        <label>Valor en UF</label>
        <input class="form-control" asp-for="MontoUF" />
    </div>
    <div class="form-group">
        <label>Valor en CLP</label>
        <input class="form-control" asp-for="MontoCLP" readonly />
    </div>
    <button type="submit" class="btn btn-primary">Convertir a CLP</button>
</form>
