@model List<Gestion_Del_Presupuesto.Models.DetalleGeneralModel>

@{
    ViewData["Title"] = "Listado de Detalles Generales";
}

<h2 class="mb-4">Listado de Detalles Generales</h2>

<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>Contratos Instituciones</th>
            <th>Tipo de Institución</th>
            <th>Nº Estudiantes</th>
            <th>Pago por Uso de CC $$</th>
            <th>Pago Apoyo a la Docencia</th>
            <th>Pago en RRHH</th>
            <th>Capacitación</th>
            <th>Obras Menores</th>
            <th>Obras Mayores</th>
            <th>Otros Gastos x retribución</th>
            <th>Total Gasto estimado 2025</th>
            <th>Deuda 2020-2023</th>
            <th>Deuda 2024</th>
            <th>Total Deuda</th>
            <th>Facturado 2025 corresp 2020-2023</th>
            <th>Facturado 2025 corresp 2024</th>
            <th>Facturado 2025 corresp 2025</th>
            <th>Total Facturado y Pagado</th>
            <th>Saldo Estimado x pagar 2025</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ContratosInstituciones</td>
                <td>@item.TipoInstitucion</td>
                <td>@item.NumeroEstudiantes</td>
                <td>@item.PagoUsoCC</td>
                <td>@item.PagoApoyoDocencia</td>
                <td>@item.PagoRRHH</td>
                <td>@item.Capacitacion</td>
                <td>@item.ObrasMenores</td>
                <td>@item.ObrasMayores</td>
                <td>@item.OtrosGastosRetribucion</td>
                <td>@item.TotalGastoEstimado</td>
                <td>@item.DeudaAnteriores</td>
                <td>@item.Deuda2024</td>
                <td>@item.TotalDeuda</td>
                <td>@item.FacturadoAnteriores</td>
                <td>@item.Facturado2024</td>
                <td>@item.Facturado2025</td>
                <td>@item.TotalFacturado</td>
                <td>@item.SaldoEstimadoPagar</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-success">Agregar Nuevo Detalle</a>
