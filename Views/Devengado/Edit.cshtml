@model Gestion_Del_Presupuesto.Models.Devengado

<h1>Editar Devengado</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id_Devengado" />
    <div class="form-group">
        <label for="Carrera">Carrera</label>
        <input asp-for="Carrera" class="form-control" />
        <span asp-validation-for="Carrera" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="CentroCosto">Centro de Costo</label>
        <input asp-for="CentroCosto" class="form-control" />
        <span asp-validation-for="CentroCosto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Itempresupuestario">Ítem Presupuestario</label>
        <input asp-for="Itempresupuestario" class="form-control" />
        <span asp-validation-for="Itempresupuestario" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="FechaInicio">Fecha Inicio</label>
        <input asp-for="FechaInicio" class="form-control" />
        <span asp-validation-for="FechaInicio" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="FechaFin">Fecha Fin</label>
        <input asp-for="FechaFin" class="form-control" />
        <span asp-validation-for="FechaFin" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ConvenioId">Convenio</label>
        <select asp-for="ConvenioId" class="form-control" asp-items="ViewBag.ConvenioId"></select>
        <span asp-validation-for="ConvenioId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>