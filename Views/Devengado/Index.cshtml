@model IEnumerable<Gestion_Del_Presupuesto.Models.Devengado>

<h1>Lista de Devengados</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Registrar Nuevo Devengado</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Convenio</th>
            <th>Cantidad de Estudiantes</th>
            <th>Gasto Proyectado</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Convenio?.Nombre</td> <!-- Nombre del convenio -->
                <td>@item.CantEstudiantes</td> <!-- Cantidad de estudiantes asociados -->
                <td>@item.GastoTotalComprometidoMonto.ToString("C")</td> <!-- Gasto proyectado en formato de moneda -->
                <td>@item.FechaInicio.ToShortDateString()</td> <!-- Fecha de inicio -->
                <td>@item.FechaFin.ToShortDateString()</td> <!-- Fecha de fin -->
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id_Devengado" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id_Devengado" class="btn btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.Id_Devengado" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>