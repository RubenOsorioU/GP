@model Gestion_Del_Presupuesto.Models.DevengadoViewModel

<h2>Generar Devengados</h2>

<form asp-action="Index" method="get">
    <div class="form-group">
        <label>Fecha de Inicio</label>
        <input class="form-control" asp-for="FechaInicio" type="date" />
    </div>
    <div class="form-group">
        <label>Fecha de Fin</label>
        <input class="form-control" asp-for="FechaFin" type="date" />
    </div>
    <button type="submit" class="btn btn-primary">Filtrar</button>
</form>

<h3>Resultados</h3>
<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Convenio</th>
            <th>Monto Comprometido</th>
            <th>Pagos Realizados</th>
            <th>Saldo Pendiente</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var devengado in Model.Devengados)
        {
            <tr>
                <td>@devengado.Convenio?.Nombre</td>
                <td>@devengado.MontoComprometido</td>
                <td>@devengado.PagosRealizados</td>
                <td>@devengado.SaldoPendiente</td>
            </tr>
        }
    </tbody>
</table>

