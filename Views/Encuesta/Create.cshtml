@model Gestion_Del_Presupuesto.Models.EncuestaModel

@{
    ViewData["Title"] = "Crear Encuesta de Satisfacción";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Tipo"></label>
            <select asp-for="Tipo" class="form-control">
                <option value="Estudiante a Campo Clínico">Estudiante a Campo Clínico</option>
                <option value="Campo Clínico a Estudiante">Campo Clínico a Estudiante</option>
            </select>
            <span asp-validation-for="Tipo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Puntuacion"></label>
            <select asp-for="Puntuacion" class="form-control">
                <option value="1">1 - Muy Malo</option>
                <option value="2">2 - Malo</option>
                <option value="3">3 - Regular</option>
                <option value="4">4 - Bueno</option>
                <option value="5">5 - Excelente</option>
            </select>
            <span asp-validation-for="Puntuacion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Comentarios"></label>
            <textarea asp-for="Comentarios" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Comentarios" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Enviar Encuesta</button>
    </form>
</div>
@{
    ViewData["Title"] = "Encuesta Enviada";
}

<div class="container text-center">
    <h2>@ViewData["Title"]</h2>
    <p>Gracias por completar la encuesta. Tu opinión es muy valiosa para nosotros.</p>
    <a href="/" class="btn btn-primary">Volver al Inicio</a>
</div>
