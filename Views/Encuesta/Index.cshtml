@model IEnumerable<Gestion_Del_Presupuesto.Models.EncuestaModel>

@{
    ViewData["Title"] = "Listado de Encuestas";
}

<div class="container">
    <h2>@ViewData["Title"]</h2>

    <table class="table">
        <thead>
            <tr>
                <th>Tipo</th>
                <th>Archivo</th>
                <th>Puntuación</th>
                <th>Fecha</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var encuesta in Model)
            {
                <tr>
                    <td>@encuesta.Tipo</td>
                    <td>
                        @if (!string.IsNullOrEmpty(encuesta.ArchivoRuta))
                        {
                            var fileName = encuesta.ArchivoRuta.Split('/').Last();
                              <!-- Aquí extraemos el nombre del archivo -->
                            <a href="@Url.Content("~/uploads/" + fileName)" target="_blank">Ver/Descargar</a>
                        }
                    </td>
                    <td>@encuesta.Puntuacion</td>
                    <td>@encuesta.Fecha.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
