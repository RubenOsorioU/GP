@model Gestion_Del_Presupuesto.Models.Historial_Actividad

<h1>Eliminar Registro</h1>

<h3>¿Estás seguro de que deseas eliminar este registro?</h3>
<div>
    <h4>Historial de Actividad</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.Fecha.ToString("yyyy-MM-dd HH:mm:ss")</dd>

        <dt class="col-sm-2">Acción</dt>
        <dd class="col-sm-10">@Model.Accion</dd>

        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.Usuario.UserName</dd> <!-- Asegúrate de que UserName está disponible -->

        <dd class="col-sm-10">
            @string.Join(", ", ViewData["Roles"] as IEnumerable<string> ?? new List<string>())
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id_Historial_Actividad" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver a la Lista</a>
    </form>
</div>
