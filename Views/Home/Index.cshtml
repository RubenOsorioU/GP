@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <h1 class="display-4 text-center">Gestión de Campos Clínicos</h1>
    <p class="text-center mb-5">Bienvenido a la plataforma de gestión de campos clínicos. Aquí puedes visualizar información general de las actividades y presupuesto de campos clínicos.</p>

    <!-- Sección de tarjetas de dashboard -->
    <div class="row mb-4">
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Total Convenios Activos</h5>
                    <p class="card-text display-6">@ViewBag.TotalConvenios</p>
                    <small>En todos los departamentos</small>
                </div>
            </div>
        </div>

        <!-- Tarjeta de Convenios Activos en Santiago -->
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Convenios Activos en Santiago</h5>
                    <p class="card-text display-6">@ViewBag.ConveniosSantiago</p>
                    <small>Convenios en la sede de Santiago</small>
                </div>
            </div>
        </div>

        <!-- Tarjeta de Convenios Activos en Coquimbo -->
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Convenios Activos en Coquimbo</h5>
                    <p class="card-text display-6">@ViewBag.ConveniosCoquimbo</p>
                    <small>Convenios en la sede de Coquimbo</small>
                </div>
            </div>
        </div>

        <!-- Tarjeta de Convenios Activos en Ambas Sedes -->
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Convenios Activos en Ambas Sedes</h5>
                    <p class="card-text display-6">@ViewBag.ConvenisAmbas</p>
                    <small>Convenios aplicables a ambas sedes</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Sección de Actividad Reciente y Próximos Vencimientos -->

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Presupuesto Total</h5>
                    <p class="card-text display-6 text-success">$1,234,567</p>
                    <h5 class="card-title">Presupuesto Gastado</h5>
                    <p class="card-text display-6 text-success">$2000</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Presupuesto Total Santiago</h5>
                    <p class="card-text display-6 text-success">$1,234,567</p>
                    <h5 class="card-title">Presupuesto Gastado</h5>
                    <p class="card-text display-6 text-success">$2000</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Presupuesto Total Coquimbo</h5>
                    <p class="card-text display-6 text-success">$1,234,567</p>
                    <h5 class="card-title">Presupuesto Gastado</h5>
                    <p class="card-text display-6 text-success">$2000</p>
                </div>
            </div>
        </div>
        </div>
    <div class="row">
        <div class="col-md-6">
            <h5>Actividad Reciente</h5>
            <div class="list-group">
                <div class="list-group-item">
                    <span class="badge bg-primary me-2">Nuevo convenio aprobado</span>
                    <span>Hospital San Juan - 15 minutos atrás</span>
                </div>
                <div class="list-group-item">
                    <span class="badge bg-success me-2">Pago recibido</span>
                    <span>Clínica Santa María - 2 horas atrás</span>
                </div>
                <div class="list-group-item">
                    <span class="badge bg-info me-2">Nuevo campo clínico registrado</span>
                    <span>Centro Médico del Este - 1 día atrás</span>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <h5>Próximos Vencimientos</h5>
            <div class="list-group">
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <span>Renovación de Convenio</span>
                    <span class="text-danger">En 3 días</span>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <span>Pago Pendiente</span>
                    <span class="text-warning">En 1 semana</span>
                </div>
                <div class="list-group-item d-flex justify-content-between align-items-center">
                    <span>Evaluación de Campo Clínico</span>
                    <span class="text-success">En 2 semanas</span>
                </div>
            </div>
        </div>
    </div>
   
</div>
