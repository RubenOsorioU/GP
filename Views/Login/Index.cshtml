@model Gestion_Del_Presupuesto.Models.LoginViewModel

@{
    Layout = null; // No usar layout para la página de inicio de sesión
    ViewData["Title"] = "Iniciar Sesión";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" /> <!-- Estilos personalizados -->
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background: linear-gradient(to right, #6a11cb, #2575fc);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #fff;
        }

        .login-box {
            background: #fff;
            border-radius: 10px;
            padding: 30px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        }

            .login-box h2 {
                color: #333;
            }

        .btn-primary {
            background: #6a11cb;
            border: none;
        }

            .btn-primary:hover {
                background: #2575fc;
            }

        .form-label {
            color: #333;
        }

        .alert-danger {
            font-size: 0.9rem;
        }

        a {
            color: #6a11cb;
        }

            a:hover {
                color: #2575fc;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-box mx-auto">
            <div class="text-center mb-4">
                <img src="~/images/user-icon.png" alt="User Icon" class="user-icon mb-3" style="width: 80px; height: 80px;" />
                <h2>Iniciar Sesión</h2>
            </div>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger text-center">
                    @ViewBag.Error
                </div>
            }

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label for="email" class="form-label">Email Institucional</label>
                    <input class="form-control" asp-for="Email" id="email" placeholder="usuario@universidad.edu" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <input class="form-control" asp-for="Password" id="password" type="password" placeholder="Ingrese su contraseña" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Iniciar Sesión</button>
                <div class="text-center mt-3">
                    <a href="/Login/ForgotPassword">¿Olvidó su contraseña?</a>
                </div>
                <div class="text-center mt-3">
                    <a href="/Register/Index">Registrarse</a>
                </div>
            </form>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
