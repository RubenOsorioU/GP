@model IEnumerable<Gestion_Del_Presupuesto.Models.PlanillasModel>

<h1>Listado De Estudiantes</h1>

<div>
    <!-- Filtros para las primeras 5 columnas -->
    <form method="get" asp-action="Index">
        <div class="row mb-3">
            <div class="col-md-2">
                <label for="institucion">Institución</label>
                <input type="text" id="institucion" name="institucion" value="@ViewBag.Institucion" class="form-control" />
            </div>
            <div class="col-md-2">
                <label for="servicio">Servicio</label>
                <input type="text" id="servicio" name="servicio" value="@ViewBag.Servicio" class="form-control" />
            </div>
            <div class="col-md-2">
                <label for="tipoPrograma">Tipo de Programa</label>
                <input type="text" id="tipoPrograma" name="tipoPrograma" value="@ViewBag.TipoPrograma" class="form-control" />
            </div>
            <div class="col-md-2">
                <label for="nombreEstudiante">Nombre Estudiante</label>
                <input type="text" id="nombreEstudiante" name="nombreEstudiante" value="@ViewBag.NombreEstudiante" class="form-control" />
            </div>
            <div class="col-md-2">
                <label for="runEstudiante">Rut Estudiante</label>
                <input type="text" id="runEstudiante" name="runEstudiante" value="@ViewBag.RunEstudiante" class="form-control" />
            </div>
            <div class="col-md-2">
                <label for="fechaInicio">Fecha Inicio</label>
                <input type="date" id="fechaInicio" name="fechaInicio" value="@ViewBag.FechaInicio" class="form-control" />
            </div>
            <div class="col-md-2">
                <label for="fechaTermino">Fecha Término</label>
                <input type="date" id="fechaTermino" name="fechaTermino" value="@ViewBag.FechaTermino" class="form-control" />
            </div>
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary">Filtrar</button>
            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>Institución</th>
                    <th>Servicio</th>
                    <th>Tipo Programa</th>
                    <th>Nombre</th>
                    <th>Rut</th>
                    <th>Fecha Inicio</th>
                    <th>Fecha Término</th>
                    <th>Horas Mensuales</th>
                    <th>Observaciones</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Institucion</td>
                        <td>@item.Servicio</td>
                        <td>@item.TipoPrograma</td>
                        <td>@item.NombresApellidosEstudiante</td>
                        <td>@item.RunEstudiante</td>
                        <td>@item.FechaInicioPractica.ToShortDateString()</td>
                        <td>@item.FechaTerminoPractica.ToShortDateString()</td>
                        <td>@item.HorasMensuales</td>
                        <td>@item.Descripcion</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id_Planillas" class="btn btn-warning">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id_Planillas" class="btn btn-info">Detalles</a>
                            <a asp-action="Delete" asp-route-id="@item.Id_Planillas" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </form>

</div>
