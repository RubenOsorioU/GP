@model Gestion_Del_Presupuesto.Models.ProvisionModel

<h2>Editar Provisión</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">>
        <label>Fecha:</label>
        <input asp-for="Fecha" type="date" class="text-danger" />
    </div>

    <div class="form-group">
        <label asp-for="NombreSede" class="control-label"></label>
        <select asp-for="NombreSede" class="form-control">
            <option value="">Selecciona una Sede</option>
            <option value="Santiago">Santiago</option>
            <option value="Coquimbo">Coquimbo</option>
            <option value="Ambas">Ambas</option>
        </select>
    </div>
     <div class="form-group">>
        <label>Nombre Campo Clínico:</label>
        <input asp-for="NombreCampoClinico" class="form-control" />
    </div>

    <div class="form-group">
        <label>Número:</label>
        <input asp-for="Numero" type="number" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TipoGasto" class="control-label"></label>
        <select asp-for="TipoGasto" class="form-control">
            <option value="">Selecciona un Tipo de Gasto</option>
            <option value="OC (Orden De Compra)">Orden de Compra</option>
            <option value="GG (Gastos Generales)">Gastos Generales</option>
   
        </select>
    </div>

    <div class="form-group">
        <label>Descripción:</label>
        <input asp-for="Descripcion" class="form-control" />
    </div>

     <div class="form-group">  
        <label>Monto:</label>
        <input asp-for="Monto" type="number" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Volver al Listado</a>
</form>