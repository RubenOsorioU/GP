@model IEnumerable<Gestion_Del_Presupuesto.Models.RetribucionModel>

<h2>Lista de Retribuciones</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Tipo de Retribución</th>
            <th>Monto</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id_Retribucion</td>
                <td>@item.Tipo_Retribucion</td>
                <td>@item.Monto</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id_Retribucion">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id_Retribucion">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Agregar Retribución</a>
