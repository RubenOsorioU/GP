@model Gestion_Del_Presupuesto.Models.RutificadoraModel

@{
    ViewData["Title"] = "Detalles de la Rutificadora";
}

<h2>Detalles de la Rutificadora</h2>

<div>
    <h4>Rutificadora</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Asignatura
        </dt>
        <dd class="col-sm-10">
            @Model.Asignatura
        </dd>
        <dt class="col-sm-2">
            Institución
        </dt>
        <dd class="col-sm-10">
            @Model.Institucion
        </dd>
        <dt class="col-sm-2">
            Nombre Completo
        </dt>
        <dd class="col-sm-10">
            @Model.NombreCompleto
        </dd>
        <dt class="col-sm-2">
            RUT
        </dt>
        <dd class="col-sm-10">
            @Model.RUT
        </dd>
        <dt class="col-sm-2">
            Fecha de Inicio
        </dt>
        <dd class="col-sm-10">
            @Model.FechaInicio.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            Fecha de Término
        </dt>
        <dd class="col-sm-10">
            @Model.FechaTermino.ToString("dd/MM/yyyy")
        </dd>
        <dt class="col-sm-2">
            Número de Días
        </dt>
        <dd class="col-sm-10">
            @Model.NumeroDias
        </dd>
        <dt class="col-sm-2">
            Observaciones
        </dt>
        <dd class="col-sm-10">
            @Model.Observaciones
        </dd>
    </dl>
</div>
<a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
