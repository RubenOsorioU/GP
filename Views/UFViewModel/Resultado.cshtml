@model Gestion_Del_Presupuesto.Models.UFViewModel

@{
    ViewData["Title"] = "Resultado";
}

<h2>Resultado de la Conversión</h2>

@if (Model != null)
{
    <p><strong>Cantidad de UF:</strong> @Model.MontoUF</p>
    <p><strong>Valor de la UF en la Fecha Seleccionada:</strong> @Model.UFValueForDate</p>
    <p><strong>Resultado (Monto en CLP):</strong> @Model.Resultado</p>
}
else
{
    <p>No se pudo obtener el resultado de la conversión. Inténtalo de nuevo.</p>
}

<a href="@Url.Action("Index", "UFViewModel")" class="btn btn-secondary">Volver a calcular</a>
